
<div class="edit-box">
  <h1 class="edit-heading">Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
      <div class="error-explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <div class="field">
        <div class="field-with-error">
          <p>Title</p>
        </div>
        <div class="field-with-error">
          <%= f.text_field :title %>
        </div>
      </div>
      <div class="field">
        <div class="field-with-error">
          <p>Body</p>
        </div>
        <div class="field-with-error">
          <%= f.text_area :body %>
        </div>
      </div>
      <div class="action">
        <%= f.submit 'Update Book' %>
      </div>
    <% else %>
      <div class="field">
        <p>Title</p>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <p>Body</p>
        <%= f.text_area :body %>
      </div>
      <div class="action">
        <%= f.submit 'Update Book' %>
      </div>
    <% end %>
  <% end %>
  <%= link_to "Show",  book_path(@book.id) %>
  |
  <%= link_to "Back",  books_path %>
</div>
