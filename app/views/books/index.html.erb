<div class="index-box">
  <h1 class="index-title">Books</h1>
  <table class="index-table">
    <thead>
      <tr>
        <th class="title-heading">Title</th>
        <th class="body-heading">Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td class="index-title"><%= book.title %></td>
          <td class="index-body"><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h2 class="index-new">New book</h2>
  <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
      <div class="error-explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <div class="field">
        <div class="field-with-error">
          <p>タイトル</p>
        </div>
        <div class="field-with-error">
          <%= f.text_field :title %>
        </div>
      </div>
      <div class="field">
        <div class="field-with-error">
          <p>本文</p>
        </div>
        <div class="field-with-error">
          <%= f.text_area :body %>
        </div>
      </div>
      <div class="action">
        <%= f.submit 'Create Book' %>
      </div>
    <% else %>
      <div class="field">
        <p>タイトル</p>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <p>本文</p>
        <%= f.text_area :body %>
      </div>
      <div class="action">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
  <% end %>
</div>
